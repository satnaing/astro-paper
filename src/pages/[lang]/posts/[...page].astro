---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { SITE } from "@/config";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  const locales = ["en", "zh-tw"] as const;

  return locales.flatMap((raw) => {
    const lang = raw as "en" | "zh-tw";
    // Filter posts by file path instead of lang field
    const filteredPosts = posts.filter(p => {
      const filePath = p.id;
      if (lang === "zh-tw") {
        return filePath.startsWith("zh-tw/");
      } else {
        return filePath.startsWith("en/") || !filePath.includes("/");
      }
    });

    return paginate(
      getSortedPosts(filteredPosts),
      { pageSize: SITE.postPerPage, params: { lang: raw } }
    );
  });
}) satisfies GetStaticPaths;

function normalizeLang(input: string | undefined) {
  if (!input) return "en" as const;
  return input.toLowerCase() === "zh-tw" ? ("zh-tw" as const) : ("en" as const);
}

const { page } = Astro.props as any;
const lang = normalizeLang(Astro.params.lang);
---

<Layout title={`Posts | ${SITE.title}`}>
  <Header />
  <Main pageTitle={lang === 'zh-tw' ? '文章' : 'Posts'} pageDesc={lang === 'zh-tw' ? '所有文章列表' : "All the articles I've posted."}>
    <ul>
      {page.data.map((data: any) => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>