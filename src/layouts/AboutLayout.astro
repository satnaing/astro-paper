---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="scan-line">
    <section id="about" class="prose mb-28 max-w-3xl prose-img:border-0 p-6 rounded-md bg-card-bg/50 backdrop-blur-sm border border-border/50">
      <h1 class="text-2xl tracking-wider sm:text-3xl cyberpunk-title" data-text={frontmatter.title}>{frontmatter.title}</h1>
      <slot />
    </section>
  </main>
  <Footer />
</Layout>
