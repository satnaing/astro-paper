---
import IconHash from "@/assets/icons/IconHash.svg";
import { getTagConfig } from "@/tags";

type Props = {
  tag: string;
  tagName?: string;
  count?: number;
  size?: "sm" | "lg";
  showDescription?: boolean;
};

const {
  tag,
  tagName,
  count,
  size = "lg",
  showDescription = false,
} = Astro.props;
const config = getTagConfig(tag);
const displayName = tagName || config.name;
---

<li class:list={[{ "mb-4": showDescription }]}>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "flex items-center gap-0.5",
      "rounded px-2 py-0.5",
      "bg-[var(--astro-code-background)] text-foreground",
      "hover:text-accent",
      { "text-sm": size === "sm" },
      { "text-base": size === "lg" },
    ]}
  >
    <IconHash
      class:list={[
        "stroke-[2.5] opacity-80",
        { "size-3.5": size === "lg" },
        { "size-3": size === "sm" },
      ]}
    />
    {displayName}{
      count !== undefined && (
        <span class="ml-1 text-xs text-muted-foreground/60">({count})</span>
      )
    }
  </a>
  {
    showDescription && config.description && (
      <p class="mt-1 ml-5 text-sm text-muted-foreground">
        {config.description}
      </p>
    )
  }
</li>
